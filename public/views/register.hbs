<div id="register-box">
    <div class="left">
        <h1>Register</h1>
        <form action="/users/register?_csrf={{_csrf}}" method="POST" enctype="multipart/form-data" id="register-form">
            <input type="text" name="firstName" placeholder="First Name"  required autocomplete="off" />
            <input type="text" name="lastName" placeholder="Last Name"  required autocomplete="off"/>
            <input type="text" name="email" placeholder="E-mail"  required autocomplete="off"/>
            <input type="password" name="password" placeholder="Password"  required autocomplete="off"/>
            <input type="password" name="password2" placeholder="Confirm password"  required autocomplete="off"/>
            <label for="avatar">Upload Your Avatar: </label>
            <input type="file" name="avatar" style="margin: 5px;" accept="image/png, image/jpeg, image/jpg, jpg, jpeg, png" required>
            <input type="submit" value="Register" id="register-button" />
        </form>
    </div>
    <div class="right" style="text-align: center;">
        <span class="loginwith">Sign in with<br />social network</span>
        <form action="/users/google" method="GET">
            <button class="social-signin google" type="submit" style="background-color: orange;color: black;">Log in with Google</button>
        </form>
        <p style="font-weight: bold;">Already have an account? <a href="/login" style="color: blue;">Login</a></p>
    </div>
    <div class="or">OR</div>
</div>


{{> footer}}